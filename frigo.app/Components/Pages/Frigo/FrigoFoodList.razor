
<h3>Foods</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Weight</th>
            <th scope="col">Expires In</th>
        </tr>
    </thead>
    <tbody>
        @foreach (FoodViewModel food in Foods)
        {
            <tr>
                <th>@food.Name</th>
                <td>@food.WeightAsGramText</td>
                <td>@food.ExpireInDaysText</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public FoodViewModel[] Foods { get; set; } = [];
}
